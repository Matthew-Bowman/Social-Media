    <main id="main" class="container mx-auto my-5 text-start">
      <div class="py-5">
        <h1 class="mb-4">Endpoints</h1>
        <!-- SECTION CONTAINER -->
        <section class="ps-sm-4 mb-4">
          <h2>/posts</h2>
          <!-- ENDPOINT CONTAINER -->
          <article class="ps-sm-4">
            <!-- GET /posts -->
            <div class="card shadow mt-4">
              <div
                class="card-header p-0 border-0"
                data-bs-toggle="collapse"
                data-bs-target="#posts-body"
              >
                <div class="input-group m-0">
                  <span class="input-group-text bg-dark text-white">GET</span>
                  <p class="form-control m-0">/posts</p>
                </div>
              </div>
              <div class="collapse card-body p-0" id="posts-body">
                <div class="p-3 d-flex flex-column gap-5">
                  <!-- PAYLOAD SECTION -->
                  <section>
                    <h4>Payload</h4>
                    <table class="table table-light border rounded table-hover">
                      <thead>
                        <tr>
                          <th scope="col">Name</th>
                          <th scope="col">Type</th>
                          <th scope="col">Value</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td>auth_token</td>
                          <td>cookie</td>
                          <td>string</td>
                        </tr>
                        <tr>
                          <td>username</td>
                          <td>query parameter</td>
                          <td>string</td>
                        </tr>
                      </tbody>
                    </table>
                  </section>
                  <section>
                    <h4>Successful Response</h4>
                    <h5 class="fs-bold">Response</h5>
                    <table class="table table-light border rounded table-hover">
                      <thead>
                        <tr>
                          <th scope="col">Name</th>
                          <th scope="col">Data Type</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td>code</td>
                          <td>int</td>
                        </tr>
                        <tr>
                          <td>message</td>
                          <td>string</td>
                        </tr>
                        <tr>
                          <td>body</td>
                          <td>body</td>
                        </tr>
                      </tbody>
                    </table>
                    <h5 class="fs-bold">body</h5>
                    <table class="table table-light border rounded table-hover">
                      <thead>
                        <tr>
                          <th scope="col">Name</th>
                          <th scope="col">Data Type</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td>posts</td>
                          <td>post[]</td>
                        </tr>
                        <tr>
                          <td>username</td>
                          <td>string</td>
                        </tr>
                      </tbody>
                    </table>
                    <h5 class="fs-bold">post</h5>
                    <table class="table table-light border rounded table-hover">
                      <thead>
                        <tr>
                          <th scope="col">Name</th>
                          <th scope="col">Data Type</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td>post_id</td>
                          <td>int</td>
                        </tr>
                        <tr>
                          <td>user_id</td>
                          <td>int</td>
                        </tr>
                        <tr>
                          <td>content</td>
                          <td>string</td>
                        </tr>
                        <tr>
                          <td>timestamp</td>
                          <td>string</td>
                        </tr>
                        <tr>
                          <td>liked</td>
                          <td>bool</td>
                        </tr>
                      </tbody>
                    </table>
                  </section>
                  <section>
                    <h4>Error Responses</h4>
                    <table class="table table-light border rounded table-hover">
                      <thead>
                        <tr>
                          <th scope="col">HTTP Status Code</th>
                          <th scope="col">Reason</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td>401</td>
                          <td>Unauthorized</td>
                        </tr>
                        <tr>
                          <td>404</td>
                          <td>Not Found</td>
                        </tr>
                        <tr>
                          <td>422</td>
                          <td>Unprocessable Entity</td>
                        </tr>
                        <tr>
                          <td>500</td>
                          <td>Internal Server Error</td>
                        </tr>
                      </tbody>
                    </table>
                  </section>
                </div>
              </div>
            </div>
          </article>
        </section>
      </div>
    </main>

    <footer class="bg-dark mt-auto py-3">
      <h3 class="text-light text-center my-auto">Footer Template</h3>
    </footer>
  </body>
</html>
